<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mXLarge"
            android:layout_marginEnd="@dimen/mXLarge"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/layout_hydroponic"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Гидропоника"
                    android:textSize="@dimen/textSizeRegular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="@dimen/mXMedium"
                    android:layout_height="@dimen/mXMedium"
                    android:background="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/view_line_color"
                  android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/layout_multichoice"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мультичойс"
                    android:textSize="@dimen/textSizeRegular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="@dimen/mXMedium"
                    android:layout_height="@dimen/mXMedium"
                    android:background="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/view_line_color"
                  android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/layout_grounded"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Почвенная"
                    android:textSize="@dimen/textSizeRegular"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="@dimen/mXMedium"
                    android:layout_height="@dimen/mXMedium"
                    android:background="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/view_line_color"
                  android:layout_alignParentBottom="true"/>




        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>